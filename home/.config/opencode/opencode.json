{
  "$schema": "https://opencode.ai/config.json",
  "theme": "tokyonight",
  "plugin": [
    "@franlol/opencode-md-table-formatter@0.0.3"
  ],
  "small_model": "github-copilot/claude-haiku-4.5",
  "agent": {
    "plan": {
      "description": "Planning, analysis, and research.",
      "permission": {
        "task": {
          "*": "deny",
          "explore": "allow"
        }
      }
    },
    "general": {
      "model": "github-copilot/claude-sonnet-4.5",
      "description": "Implementation focused; no delegation.",
      "permission": {
        "task": {
          "*": "deny"
        }
      },
      "tools": {
        "websearch_*": false,
        "context7_*": false,
        "grep_app_*": false,
        "webfetch": false
      }
    },
    "explore": {
      "model": "github-copilot/gemini-3-flash-preview",
      "description": "Fast, read-only codebase exploration.",
      "tools": {
        "websearch_*": false,
        "context7_*": false,
        "grep_app_*": false
      }
    }
  },
  "mcp": {
    "websearch": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp",
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "grep_app": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": true
    }
  }
}
