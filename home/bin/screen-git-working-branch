#!/bin/sh

git branch > /dev/null;
if [ "$?" -eq "0" ]; then
	git status | grep "nothing to commit" > /dev/null;
	if [ "$?" -eq "0" ]; then
		echo "\005{+ gW} ($(git branch 2>/dev/null | grep '*' | sed 's/\* //')) \005{-}"
	else
		echo "\005{+ rW} {$(git branch 2>/dev/null | grep '*' | sed 's/\* //')} \005{-}"
	fi;
fi
